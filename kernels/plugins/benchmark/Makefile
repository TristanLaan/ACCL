DEVICE=xcu250-figd2104-2L-e
BENCHMARK_IP=benchmark.xo
TARGET=ip

all: $(BENCHMARK_IP)
.PHONY: clean

$(BENCHMARK_IP): build_benchmark.tcl benchmark.cpp benchmark.hpp commands.hpp
	vitis_hls $< -tclargs $(TARGET) $(DEVICE)

clean:
	rm -rf build_benchmark vitis_hls.log benchmark.xo
